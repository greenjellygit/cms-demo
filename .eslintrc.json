{
    "root": true,
    "ignorePatterns": ["**/*"],
    "plugins": ["@nx"],
    "overrides": [
        {
            "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
            "extends": [
                "airbnb",
                "airbnb/hooks",
                "plugin:react/recommended",
                "plugin:react-hooks/recommended",
                "prettier"
            ],
            "rules": {
                "@nx/enforce-module-boundaries": [
                    "error",
                    {
                        "enforceBuildableLibDependency": true,
                        "allow": [],
                        "depConstraints": [
                            {
                                "sourceTag": "@cms-utils",
                                "onlyDependOnLibsWithTags": ["@cms-utils"]
                            },
                            {
                                "sourceTag": "@cms-model",
                                "onlyDependOnLibsWithTags": ["@cms-model", "@cms-utils"]
                            },
                            {
                                "sourceTag": "@cms-ui",
                                "onlyDependOnLibsWithTags": ["@cms-ui", "@cms-utils", "@cms-model"]
                            },
                            {
                                "sourceTag": "@cms-web",
                                "onlyDependOnLibsWithTags": [
                                    "@cms-web",
                                    "@cms-utils",
                                    "@cms-model",
                                    "@cms-ui"
                                ]
                            },
                            {
                                "sourceTag": "@cms-api",
                                "onlyDependOnLibsWithTags": ["@cms-api", "@cms-utils", "@cms-model"]
                            }
                        ]
                    }
                ],
                "react-hooks/rules-of-hooks": "error",
                "react/react-in-jsx-scope": "off",
                "react/jsx-filename-extension": [
                    "error",
                    {
                        "extensions": [".tsx"]
                    }
                ],
                "import/no-named-as-default": "off",
                "import/no-extraneous-dependencies": "off",
                "import/extensions": [
                    "error",
                    "ignorePackages",
                    {
                        "js": "never",
                        "jsx": "never",
                        "ts": "never",
                        "tsx": "never"
                    }
                ],
                "import/prefer-default-export": "off",
                "react/jsx-props-no-spreading": "off",
                "lines-between-class-members": [
                    "error",
                    "always",
                    {
                        "exceptAfterSingleLine": true
                    }
                ],
                "max-classes-per-file": "off",
                "consistent-return": "off",
                "no-restricted-imports": [
                    "error",
                    {
                        "paths": [
                            {
                                "name": "express",
                                "importNames": ["Request", "Response"],
                                "message": "Import TypRequest or TypResponse instead."
                            }
                        ]
                    }
                ],
                "class-methods-use-this": ["off"],
                "no-new": ["off"]
            }
        },
        {
            "files": ["*.ts", "*.tsx"],
            "extends": ["plugin:@nx/typescript"],
            "rules": {}
        },
        {
            "files": ["*.js", "*.jsx"],
            "extends": ["plugin:@nx/javascript"],
            "rules": {}
        },
        {
            "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
            "env": {
                "jest": true
            },
            "rules": {}
        }
    ],
    "settings": {
        "import/resolver": {
            "typescript": {
                "project": "./tsconfig.base.json"
            }
        }
    }
}
